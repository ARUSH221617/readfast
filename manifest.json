{
    "manifest_version": 3,
    "name": "AI Text Translator & Simplifier",
    "version": "1.0",
    "permissions": ["scripting", "activeTab", "storage"],
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "cohere.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["fonts/*.otf", "fonts/*.ttf"],
        "matches": ["<all_urls>"]
      }
    ]
  }